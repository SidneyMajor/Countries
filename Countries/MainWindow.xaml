<Window x:Class="Countries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countries"
        xmlns:self="clr-namespace:Countries.Models"
        Loaded="Window_Loaded"
        mc:Ignorable="d"  
        Icon="/Resource/glob.ico"
        Title="Country" Height="600" Width="1000" Background="Silver" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="600" ResizeMode="NoResize" >

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="216*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="244*"/>
            <RowDefinition Height="327*"/>

        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,0,8.333,175">
            <TextBlock Text="Region" Margin="10,2,10,0" FontSize="40" Width="227" ><InlineUIContainer>
                    <Image Source="/Resource/glob.ico" Width="60"  Margin="0 0 0 -15" />
                </InlineUIContainer></TextBlock>
        </StackPanel>

        <Image x:Name="ImageCountry" Source="{Binding FlagPath}" Height="208" Margin="258.667,26,9.667,0" Stretch="Fill"  MaxWidth="250" MaxHeight="201" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" />
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,64,8.333,0.333" Grid.RowSpan="2">
            <TreeView  x:Name="TreeViewCountries" FontFamily="Perpetua" FontWeight="Bold" Background="Transparent" BorderThickness="0" Width="251" SelectedItemChanged="TreeViewCountries_SelectedItemChanged">
                <!--<TreeView.ItemTemplate>
                    <HierarchicalDataTemplate  DataType="{x:Type ListViewItem}" ItemsSource="{Binding ItemsTreeView}" >
                        <Button x:Name="BtnSelectedCountry" Background="Silver" BorderThickness="0"  Click="BtnSelectedCountry_Click" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="{Binding Title}" FontSize="30" />
                                <Image Source="{Binding FlagPath}" Width="25" Height="25"/>
                                <TextBlock Text="{Binding Name}" Margin="5" FontSize="20"/>
                            </StackPanel>
                        </Button>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>-->

                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type self:Continente}" ItemsSource="{Binding CountriesList}" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontSize="30"/>
                            <TextBlock Text=" [" Foreground="Blue" />
                            <TextBlock Text="{Binding CountriesList.Count}" Foreground="Blue" />
                            <TextBlock Text="]" Foreground="Blue" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type self:Country}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding FlagPathIco}" Width="25" Height="25" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding Name}" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="20"/>
                            <TextBlock Text="{Binding Capital,StringFormat=({0})}" Foreground="Green" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>


            </TreeView>
        </StackPanel>

        <Label x:Name="LabelStatus" Content="Status"  Width="509" Margin="11.667,0,0,20.333" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1" FontSize="14" FontWeight="Bold" Height="29" Grid.ColumnSpan="3" Grid.Column="1"/>
        <ProgressBar x:Name="ProgressBarLoad" Margin="2.667,0,0.667,0.333" Grid.Row="1" Height="20" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Column="1"/>

        <StackPanel Orientation="Vertical" Margin="0.667,3,-0.333,43.333" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" >
            <TabControl Height="269"  Margin="0,10,0,0"  >
                <TabItem Header="Language">
                    <Grid Background="White" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="317*"/>
                            <ColumnDefinition Width="377*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0.334,9.667" Grid.ColumnSpan="2">
                            <ListBox x:Name="listBoxLanguage" HorizontalAlignment="Left" Width="auto" Background="#FFE9B8B8" FontSize="14" FontWeight="Black" Margin="0,10"/>
                        </StackPanel>
                        <TextBlock x:Name="TextBlockTranslation" Grid.Column="1" HorizontalAlignment="Left" Margin="10.333,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                        <TextBlock x:Name="TextBlockTranslation2"  Grid.Column="1" HorizontalAlignment="Left" Margin="248.333,13,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Currency">
                    <Grid Background="White" Margin="0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="109*"/>
                            <ColumnDefinition Width="122*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,0.333,-0.333">
                            <ListBox x:Name="listBoxCurrency" HorizontalAlignment="Left" Margin="0,10,0,-0.333" Width="auto" Background="#FFC75454" FontSize="14" FontWeight="Black"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="221" Margin="9.667,10,0,0" VerticalAlignment="Top" Width="346" Grid.Column="1">
                            <ComboBox Height="20" Margin="0,0,214,0"/>
                            <ComboBox Height="29" HorizontalAlignment="Right" Width="139"/>

                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Covid19 Info">
                    <Grid Background="White" Margin="0 0">
                        <StackPanel Grid.Column="3" HorizontalAlignment="Left" Height="202" Margin="1.667,33,0,0" VerticalAlignment="Top" Width="204" Grid.RowSpan="2">
                            <TextBlock x:Name="TextBlockCovid" Text="Current Info Covid19" Margin="0,0,9,0" Foreground="DarkRed" FontSize="18" FontWeight="Black" RenderTransformOrigin="0.5,0.5" Height="40"/>
                            <TextBlock x:Name="InfoCovid" Text="TextBlock" Margin="0,0,9,0" FontSize="16" FontWeight="Black"  RenderTransformOrigin="0.5,0.5" Height="136"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

            </TabControl>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left"  Margin="9.667,3,0,0" VerticalAlignment="Top" Width="310" Height="231" Grid.Column="2">
            <TextBlock x:Name="CountryName" Text="CoutryName" FontSize="20" FontWeight="Black" VerticalAlignment="Top" Margin="0,0,-376,10" />
            <TextBlock x:Name="CountryInfo" Text="InfoCoutry" FontSize="16" FontWeight="Black" VerticalAlignment="Top" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="2.667,10,10.333,5" Grid.Column="1" >
            <TextBox x:Name="TextBoxSearch" Margin="0,0,0,204.333" Width="175" TextChanged="TextBoxSearch_TextChanged" SelectionChanged="TextBoxSearch_SelectionChanged"/>
        </StackPanel>

    </Grid>
</Window>
